{
  "name": "webext-tx-fix",
  "version": "0.3.1",
  "description": "Fix locales missing placeholders pulled from transifex",
  "author": "eight04 <eight04@gmail.com>",
  "license": "MIT",
  "keywords": [
    "webextension",
    "i18n",
    "locale"
  ],
  "scripts": {
    "lint": "eslint **/*.js --cache --ignore-pattern=coverage",
    "test": "npm run lint && nyc --reporter=html mocha",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push --follow-tags && npm publish",
    "build": "inlinejs README.md -o README.md",
    "prepack": "crlf --set=LF cli.js"
  },
  "bin": {
    "webext-tx-fix": "cli.js"
  },
  "files": [
    "cli.js"
  ],
  "main": "index.js",
  "dependencies": {
    "detect-indent": "^5.0.0",
    "neodoc": "^2.0.2",
    "ordered-json": "^0.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "crlf": "^1.1.1",
    "eslint": "^5.9.0",
    "inline-js": "^0.8.0",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1"
  },
  "repository": "eight04/webext-tx-fix",
  "engines": {
    "node": ">=8"
  }
}
